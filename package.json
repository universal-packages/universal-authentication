{
  "name": "@universal-packages/authentication",
  "version": "1.12.0",
  "description": "Dynamic authentication api",
  "author": "David De Anda <david@universal-packages.com> (https://github.com/universal-packages)",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:universal-packages/universal-authentication.git",
  "scripts": {
    "build": "tsc --p tsconfig.dis.json",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:clear": "jest --clearCache",
    "format": "prettier --write \"./{src,tests}/**/*.{ts,tsx,js,jsx,json}\"",
    "update-universal-dependencies": "umaintenance update-universal-dependencies"
  },
  "dependencies": {
    "@universal-packages/crypto-utils": "^1.1.4",
    "@universal-packages/dynamic-api": "^1.12.4",
    "@universal-packages/time-based-one-time-password": "^1.0.4",
    "@universal-packages/validations": "^1.2.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@types/ms": "^0.7.32",
    "@types/node": "^18.11.9",
    "@types/validator": "^13.11.2",
    "@universal-packages/dynamic-api-jest": "^1.1.5",
    "@universal-packages/maintenance": "^1.6.9",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "setupFilesAfterEnv": [
      "@universal-packages/dynamic-api-jest",
      "<rootDir>/tests/setup.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "trailingComma": "none",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "classProperties",
      "decorators-legacy"
    ]
  }
}
